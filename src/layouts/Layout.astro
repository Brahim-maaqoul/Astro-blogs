---
import Header from "../components/Header.astro"

interface Props {
    title: string;
    description?: string;
    image?: string;
}
const {title, description = "A community of music producers and enthusiasts",
 image = "/images/band.jpg"} = Astro.props;
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="description" content={description}>
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link rel="icon" type="image/svg+xml" href="/favicon.svg">
        <title>{title}</title>
        <meta name="generator" content={Astro.generator}></meta>
        <meta property="og:image" content={image}></meta>
        
    </head>
    <body class="min-h-screen">
        <Header />
        <slot/>
    </body>
</html>